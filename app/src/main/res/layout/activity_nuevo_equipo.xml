<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipos.NuevoEquipoActivity">

    <ImageView
        android:id="@+id/Newimagen"
        android:layout_width="215dp"
        android:layout_height="165dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#0288D1"
        app:layout_constraintBottom_toTopOf="@+id/NewNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_pc" />

    <EditText
        android:id="@+id/NewNombre"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColorHint="#039BE5"
        app:layout_constraintBottom_toTopOf="@+id/NewUbicacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/NewUbicacion"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Ubicación"
        android:inputType="textPersonName"
        android:textColorHint="#039BE5"
        app:layout_constraintBottom_toTopOf="@+id/NewDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/NewDescripcion"
        android:layout_width="216dp"
        android:layout_height="64dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textPersonName"
        android:textColorHint="#039BE5"
        app:layout_constraintBottom_toTopOf="@+id/NewTipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/NewTipo"
        android:layout_width="409dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="105dp"
        android:backgroundTint="#039BE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/crearEquipo"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:backgroundTint="#0288D1"
        android:text="CREAR EQUIPO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewTipo" />

</androidx.constraintlayout.widget.ConstraintLayout>